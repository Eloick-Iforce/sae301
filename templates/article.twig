{% extends 'base.twig' %}

{% block main %}

	<div class="supp">
		<a href="controleur.php?page=elements&action=edit&id={{article.id_article}}">
			<i class="bi bi-pen"></i>
		</a>
	</div>
	<div class="supp">
		<a href="controleur.php?page=article&action=delete&id={{article.id_article}}">
			<i class="bi bi-trash3-fill"></i>
		</i>
	</a>
</div>


<h1>{{article.titre_article}}</h1>

<p class='chapo'>{{article.chapo_article}}</p>

<div class="texte">

	{% for element in elements %}

		{% if element.balise_elements == video %}

			<video controls>
				<source src="{{ element.src }}">
			</video>
		{% else %}

			{%if element.balise_elements == audio %}
				<figure>
					<figcaption>Listen to the T-Rex:</figcaption>
					<audio controls src="{{ element.src }}"></audio>
				</figure>
			{% else %}
				<{{element.balise_elements}} src="{{ element.src }}" class="{{ element.style }}">{{ element.contenu }}</{{element.balise_elements}}>
			{% endif %}
		{% endif %}


	{% endfor %}
</div>
<p class='auteur'>{{article.auteur_article}}</p>{% endblock %}
